{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenCode Plugin Schema",
  "type": "object",
  "required": [
    "name",
    "displayName",
    "description",
    "categories",
    "authors",
    "license",
    "links",
    "opencode",
    "installation",
    "maintained",
    "lastUpdated"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique plugin identifier (lowercase, alphanumeric, hyphens)"
    },
    "displayName": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable plugin name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Short description of the plugin"
    },
    "categories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "Development",
          "Productivity",
          "UI/UX",
          "Testing",
          "Debugging",
          "Documentation",
          "Integration",
          "Utilities",
          "Providers",
          "Other"
        ]
      }
    },
    "authors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "url"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "license": {
      "type": "string",
      "minLength": 1,
      "description": "SPDX license identifier"
    },
    "links": {
      "type": "object",
      "required": ["repository"],
      "properties": {
        "repository": {
          "type": "string",
          "format": "uri"
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "documentation": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "opencode": {
      "type": "object",
      "required": ["minimumVersion"],
      "properties": {
        "minimumVersion": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "maximumVersion": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      }
    },
    "installation": {
      "type": "object",
      "required": ["summary", "markdown"],
      "properties": {
        "summary": {
          "type": "string",
          "minLength": 10,
          "maxLength": 200,
          "description": "Brief installation summary"
        },
        "markdown": {
          "type": "string",
          "minLength": 10,
          "description": "Detailed installation instructions in Markdown"
        }
      }
    },
    "usage": {
      "type": "object",
      "properties": {
        "markdown": {
          "type": "string",
          "description": "Usage instructions in Markdown"
        }
      }
    },
    "maintained": {
      "type": "boolean",
      "description": "Whether the plugin is actively maintained"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date",
      "description": "Last update date in YYYY-MM-DD format"
    }
  }
}
